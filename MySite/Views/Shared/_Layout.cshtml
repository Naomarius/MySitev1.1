<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>@ViewBag.Title</title>
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <meta name="viewport" content="width=device-width" />
        @Styles.Render("~/Content/css")
        @Scripts.Render("~/bundles/modernizr")
    </head>
    <body>

        <div class="navbar navbar-inverse">
            <div class="navbar-inner">
                <ul class="nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("Blog", "Index", "Blog")</li>
                    <li>@Html.ActionLink("Forum", "Index", "Forum")</li>
                    <li>@Html.ActionLink("Gallery", "Index", "Gallery")</li>
                    <li>@Html.ActionLink("Video", "Index", "Video")</li>
                </ul>
                <div class="accountNavHeader">
                    <ul class="nav pull-right">
                        <li>@Html.ActionLink("Login", "Login", "Account")</li>
                    </ul>
                </div>
            </div>
        </div>

        <header>
            <div id="header">
                <div id="logo">
                    <a class="brand" style="opacity: 1;" href="http://z777ik.blogspot.com/"></a>
                </div>
                <div>
                    <div id="info">
                        <div>
                            @Html.Partial("_HeaderInfo")
                        </div>
                    </div>
                    <div id="img-left"></div>
                </div>
            </div>
        </header>

        <article>
            @RenderSection("featured", required: false)
            <section  class="mainContainer container">
                @RenderBody()
            </section>
        </article>

        <footer>
            <div class="row-fluid">
                <div class="span4">
                    What are you doing? Get gaming!!!
                </div>
                <div class="span4">
                    <p>&copy; @DateTime.Now.Year - Naomarius</p>
                </div>
                <div class="span4">
                    @Html.ActionLink("Policies", "About", "Home") | @Html.ActionLink("About", "About", "Home")
                </div>
            </div>
        </footer>

        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstap")
        @RenderSection("scripts", required: false)
    </body>
</html>
