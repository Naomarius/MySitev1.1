@model MySite.Models.Post

@{
    ViewBag.Title = "Blog::Nao.Tv";
}

<h2>Create</h2>

<form action="@Href("~/Blog/Update")" method="post" id="postForm">
    @{ DateTime dateTime = Model.DateTime.Year > 2000 ? Model.DateTime : DateTime.Now;}
    <input type="hidden" name="dateTime" value="@dateTime" /><br />
    <div>Title</div> 
    <input type="text" name="title" value="@Model.Title" /><br />
    <div>Tags</div> 
    <input type="text" name="tags" value="@ViewBag.Tags" /><br />
    <textarea name="body" rows="10" cols="80" style="width: 75%; height: 700px; max-width: 1100px;">@Model.Body</textarea><br />
    @Html.ActionLink("Back to List", "Index") | <input type="submit" name="submit" value="Submit" />
</form>


